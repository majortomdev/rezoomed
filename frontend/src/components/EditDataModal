import React, { useState } from "react";

const EditDataModal = ({ datatag, onSave, onClose }) => {
  const [editedTitle, setEditedTitle] = useState(datatag.title);
  const [editedEntries, setEditedEntries] = useState(
    datatag.entries.join("\n")
  ); // Assuming entries is an array of strings

  const handleSave = () => {
    const updatedDatatag = {
      ...datatag,
      title: editedTitle,
      entries: editedEntries.split("\n"), // Splitting back into an array
    };
    onSave(updatedDatatag);
    onClose();
  };

  return (
    <div className="modal">
      <div className="modal-content">
        <h2>Edit Data</h2>
        <input
          type="text"
          value={editedTitle}
          onChange={(e) => setEditedTitle(e.target.value)}
        />
        <textarea
          rows="10"
          value={editedEntries}
          onChange={(e) => setEditedEntries(e.target.value)}
        />
        <button onClick={handleSave}>Save</button>
        <button onClick={onClose}>Cancel</button>
      </div>
    </div>
  );
};

export default EditDataModal;
